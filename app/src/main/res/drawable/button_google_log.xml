<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false" >
        <shape>
            <gradient
                android:startColor="@color/primary_color_transparant"
                android:endColor="@color/primary_color_transparant"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="@color/primary_color" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/google_red_dark"
                android:endColor="@color/google_red_dark"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="@color/google_red_dark" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:startColor="@color/google_red_dark"
                android:endColor="@color/google_red_dark"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="@color/google_red_dark" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="@color/google_red"
                android:endColor="@color/google_red"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="@color/google_red" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>